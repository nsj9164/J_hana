<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff6f61"
        android:fontFamily="@font/susu"
        android:gravity="center"
        android:padding="12dp"
        android:text="계정"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:id="@+id/re"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        app:srcCompat="@drawable/person"
                        tools:ignore="VectorDrawableCompat" />

                    <LinearLayout
                        android:id="@+id/li11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New"
                            android:textColor="#ff0000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ylol3939@naver.com"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/chevron0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </RelativeLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/re"
                    android:layout_alignLeft="@+id/re"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#cecece" />

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_alignLeft="@+id/re"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="*"
                        android:textColor="#ff0000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rank_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3회 더 주문 시 다음 달 Silver!"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/benefit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_toLeftOf="@+id/chevron"
                    android:text="회원 혜택 보기"
                    android:textColor="#ff0000"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/chevron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_right_black_24dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/benefit"
                    android:layout_alignLeft="@+id/re"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#cecece" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/ic_event2_available_black_24dp"
                    android:text="예약" />

                <Button
                    android:id="@+id/favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/ic_favorite2_black_24dp"
                    android:text="관심" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/ic_create_black_24dp"
                    android:text="후기" />
            </LinearLayout>

            <View
                android:id="@+id/view32"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/r2"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#cecece" />

            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view32"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="이벤트 및 공지사항"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/r3"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#cecece" />


            <RelativeLayout
                android:id="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="고객센터"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>


            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/r4"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#cecece" />

            <RelativeLayout
                android:id="@+id/r5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view5"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="이용약관"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>


            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/r5"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#cecece" />

            <RelativeLayout
                android:id="@+id/r6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view6"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="개인정보처리방침"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>


            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/r6"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#cecece" />

            <RelativeLayout
                android:id="@+id/r7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view7"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="개인정보처리방침"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>


            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/r7"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#cecece" />

            <RelativeLayout
                android:id="@+id/r8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view8"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="개인정보처리방침"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>


            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/r8"
                android:layout_alignLeft="@+id/r1"
                android:layout_alignRight="@+id/r1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#cecece" />

        </RelativeLayout>

    </ScrollView>


</LinearLayout>